#!/usr/bin/env bash
# Convenience wrapper so you can run: ./heyCopilot speak
# It prefers the repo .venv if present.
REPO_ROOT="$(cd "$(dirname "$0")" && pwd)"
if [ -f "$REPO_ROOT/.venv/bin/python" ]; then
  PY="$REPO_ROOT/.venv/bin/python"
else
  PY="python3"
fi
exec "$PY" "$REPO_ROOT/Agentcy/scripts/hey_copilot.py" "$@"
